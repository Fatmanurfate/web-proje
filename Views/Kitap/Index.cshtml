@model List<KutuphaneWeb.Models.Kitap>
@using Microsoft.AspNetCore.Http

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">ðŸ“š KÃ¼tÃ¼phane ArÅŸivi</h2>
    @if (Context.Session.GetString("UserRole") == "Admin")
    {
        <a href="/Kitap/Ekle" class="btn btn-success rounded-pill px-4">
            <i class="bi bi-plus-lg"></i> Yeni Kitap Ekle
        </a>
    }
</div>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var k in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0" style="transition: transform 0.2s;">
                <div style="height: 300px; overflow: hidden; background-color: #f8f9fa;" class="d-flex align-items-center justify-content-center">
                    <img src="@k.ResimUrl" class="card-img-top" alt="@k.KitapAdi" style="height: 100%; object-fit: contain; padding: 10px;">
                </div>
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold text-dark">@k.KitapAdi</h5>
                    <p class="text-muted small mb-2"><i class="bi bi-person-fill"></i> @k.Yazar</p>
                    
                    <p class="card-text small text-secondary flex-grow-1">
                        @(k.Ozet.Length > 80 ? k.Ozet.Substring(0, 80) + "..." : k.Ozet)
                    </p>
                    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="badge bg-light text-dark border">@k.SayfaSayisi Sayfa</span>
                        
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <a href="/Kitap/Sil/@k.Id" class="btn btn-outline-danger btn-sm rounded-circle" 
                               onclick="return confirm('Bu kitabÄ± silmek istediÄŸine emin misin?');" title="Sil">
                                <i class="bi bi-trash"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>